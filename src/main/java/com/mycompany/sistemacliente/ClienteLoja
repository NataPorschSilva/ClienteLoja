package com.mycompany.sistemacliente;

import java.util.Locale;
import java.util.Scanner;

public class SistemaCliente {
    
    //CRIE UM PROGRAMA QUE REGISTRE CLIENTES EM UM LOJA, O SISTEMA PRECISA PEDIR:
    //NOME, ENDEREÃ‡O, CPF, IDADE, SEXO E NO FINAL MOSTRAR NA TELA.
    // a       b       c     d     f           
    public static void main(String[] args) {
               
       Locale.setDefault(Locale.US);
       Scanner loja1 = new Scanner(System.in);
       
       String a, b;
       
       Scanner loja2 = new Scanner(System.in);
       
       int d;
       double c;
       
         System.out.println("Digite seus Dados:");
         a = loja1.nextLine();
         b = loja1.nextLine();
         c = loja2.nextDouble();
         d = loja2.nextInt();
         char f = loja2.next().charAt(0);
       
         System.out.println("Dados digitados:");
         System.out.println(a);
         System.out.println(b);
         System.out.println(c);
         System.out.println(d);
         System.out.println(f);
       
         loja1.close();
         loja2.close();
     
        
        
        
        
        
    }
}
